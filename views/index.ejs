<!doctype html>
<html class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.8.0/fonts/remixicon.css" rel="stylesheet" />

  <style>
    body { background-color: #131314; }
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #131314; }
    ::-webkit-scrollbar-thumb { background: #333537; border-radius: 10px; }
  </style>
</head>

<body class="text-gray-200 font-sans">

  <form action="/user/logout" method="POST" class="fixed top-6 right-8 z-50">
  <button
    type="submit"
    class="flex items-center gap-2 bg-[#1e1f20] border border-[#444746] px-4 py-2 rounded-xl text-red-400 hover:bg-[#28292a] hover:text-red-300 transition">
    <i class="ri-logout-box-r-line"></i>
    Logout
  </button>
</form>

  <button
    class="bg-[#28292a] hover:bg-[#333537] m-8 px-6 py-4 rounded-2xl text-white shadow-lg flex items-center gap-3 fixed bottom-8 right-8 sm:bottom-auto sm:right-auto sm:top-0 sm:left-0 z-50 cursor-pointer border border-[#444746] transition-all"
    onclick="openPopup()">
    <i class="ri-add-line text-2xl text-blue-400"></i>
    <span class="font-medium">New Upload</span>
  </button>

  <div class="pt-32 px-10 pb-20">
    <h1 class="text-xl font-medium mb-8 text-gray-400">Your Cloud Files</h1>
    
    <% if (files.length === 0) { %>
      <div class="flex flex-col items-center justify-center py-20 border-2 border-dashed border-[#28292a] rounded-3xl">
        <i class="ri-folder-open-line text-6xl text-gray-700 mb-4"></i>
        <p class="text-gray-500 text-lg">Your drive is empty</p>
      </div>
    <% } %>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-6">
      <% files.forEach(file => { %>
        <div class="bg-[#1e1f20] border border-[#444746] rounded-2xl p-4 hover:border-blue-500/50 hover:bg-[#202124] transition-all group relative">

          <div class="flex justify-center py-6 bg-[#131314] rounded-xl mb-4">
            <i class="ri-file-cloud-line text-5xl text-blue-400/80 group-hover:text-blue-400 transition-colors"></i>
          </div>

          <p class="text-sm truncate text-center font-medium text-gray-300" title="<%= file.originalName %>">
            <%= file.originalName %>
          </p>

          <div class="flex justify-center gap-5 mt-4 opacity-0 group-hover:opacity-100 transition-all transform translate-y-2 group-hover:translate-y-0">
            
            <a href="<%= file.path %>" 
               download="<%= file.originalName %>"
               class="text-blue-400 hover:text-blue-300 text-xl transition-colors"
               title="Download">
              <i class="ri-download-2-line"></i>
            </a>

            <form action="/delete/<%= file._id %>" method="POST" onsubmit="return confirm('Delete this file permanently?')">
              <button
                type="submit"
                class="text-red-400/70 hover:text-red-400 text-xl transition-colors cursor-pointer"
                title="Delete">
                <i class="ri-delete-bin-line"></i>
              </button>
            </form>

          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <div
    id="backdrop"
    class="hidden fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-[60]">

    <form action="/upload" method="POST" enctype="multipart/form-data" class="relative">

      <button type="button"
        class="absolute -top-12 right-0 text-gray-400 hover:text-white transition-colors"
        onclick="closePopup()">
        <i class="ri-close-line text-3xl"></i>
      </button>

      <div class="w-[90vw] max-w-[450px] bg-[#1e1f20] p-8 rounded-3xl border border-[#444746] shadow-2xl">
        <h2 class="text-xl mb-6 font-normal">Upload files</h2>

        <label for="dropzone-file"
          class="flex flex-col items-center justify-center w-full h-64 bg-[#131314] border-2 border-dashed border-[#444746] rounded-2xl cursor-pointer hover:bg-[#28292a] hover:border-blue-500/50 transition-all group">

          <div class="flex flex-col items-center justify-center pt-5 pb-6 text-center">
            <div class="p-4 rounded-full bg-blue-500/10 mb-4 group-hover:scale-110 transition-transform">
                <i class="ri-upload-cloud-2-line text-4xl text-blue-400"></i>
            </div>
            <p class="mb-2 text-sm text-gray-300">
              <span class="font-semibold text-blue-400">Click to upload</span> or drag and drop
            </p>
            <p id="file-chosen" class="text-xs text-gray-500">Maximum file size: 10MB</p>
          </div>

          <input id="dropzone-file" type="file" name="file" class="hidden" required onchange="displayFileName(this)" />
        </label>

        <div class="flex justify-end gap-3 mt-8">
          <button type="button"
            onclick="closePopup()"
            class="px-6 py-2 text-blue-400 hover:bg-blue-400/10 rounded-full font-medium transition-colors">
            Cancel
          </button>
          <button
            class="bg-blue-600 hover:bg-blue-500 px-8 py-2 rounded-full text-white font-medium shadow-md transition-all">
            Upload
          </button>
        </div>
      </div>
    </form>
  </div>

  <script>
    const backdrop = document.getElementById('backdrop');
    const fileChosenText = document.getElementById('file-chosen');

    function openPopup() {
      backdrop.classList.remove('hidden');
    }

    function closePopup() {
      backdrop.classList.add('hidden');
      fileChosenText.innerText = "Maximum file size: 10MB";
    }

    function displayFileName(input) {
        if (input.files && input.files[0]) {
            fileChosenText.innerText = "Selected: " + input.files[0].name;
            fileChosenText.classList.replace('text-gray-500', 'text-blue-300');
        }
    }

    backdrop.addEventListener('click', (e) => {
      if (e.target === backdrop) closePopup();
    });
  </script>

</body>
</html>