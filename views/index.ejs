<!doctype html>
<html class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.8.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
      body { background-color: #131314; }
    </style>
  </head>
  <body class="text-gray-200 font-sans">

    <button class="bg-[#28292a] hover:bg-[#333537] m-8 px-6 py-4 rounded-2xl text-white shadow-lg flex items-center gap-3 transition-all fixed z-50 cursor-pointer border border-[#444746]"
      onclick="popup()">
      <i class="ri-add-line text-2xl text-blue-400"></i>
      <span class="font-medium">New Upload</span>
    </button>

    <div id="backdrop" class="hidden h-screen bg-black/60 backdrop-blur-sm w-screen flex items-center justify-center fixed z-[60]">
        
      <form action="/home" method="post" enctype="multipart/form-data" class="relative">
        <button type="button" class="absolute -top-12 -right-0 text-gray-400 hover:text-white transition-colors" onclick="closepop()">
          <i class="ri-close-line text-3xl"></i>
        </button>

        <div class="pop w-[450px] bg-[#1e1f20] p-8 rounded-3xl border border-[#444746] shadow-2xl">
          <h2 class="text-xl mb-6 font-normal">Upload files</h2>
          
          <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 bg-[#131314] border-2 border-dashed border-[#444746] rounded-2xl cursor-pointer hover:bg-[#28292a] hover:border-blue-500/50 transition-all group">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                  <div class="p-4 rounded-full bg-blue-500/10 mb-4 group-hover:scale-110 transition-transform">
                    <svg class="w-10 h-10 text-blue-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h3a3 3 0 0 0 0-6h-.025a5.56 5.56 0 0 0 .025-.5A5.5 5.5 0 0 0 7.207 9.021C7.137 9.017 7.071 9 7 9a4 4 0 1 0 0 8h2.167M12 19v-9m0 0-2 2m2-2 2 2"/>
                    </svg>
                  </div>
                  <p class="mb-2 text-sm text-gray-300"><span class="font-semibold text-blue-400">Click to upload</span> or drag and drop</p>
                  <p class="text-xs text-gray-500">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
              </div>
              <input id="dropzone-file" type="file" class="hidden" name="file" />
          </label>

          <div class="flex justify-end gap-3 mt-8">
            <button type="button" onclick="closepop()" class="px-6 py-2 text-blue-400 hover:bg-blue-400/10 rounded-full font-medium transition-colors">Cancel</button>
            <button class="bg-blue-600 hover:bg-blue-500 px-8 py-2 rounded-full text-white font-medium transition-all shadow-md">Upload</button>
          </div>
        </div> 
      </form>
    </div>

    <script>
        const backdrop = document.getElementById('backdrop');

        function popup(){
            backdrop.classList.remove('hidden');
        }
        function closepop(){
            backdrop.classList.add('hidden');
        }
        backdrop.addEventListener('click', (e) => {
          if (e.target === backdrop) closepop();
        });
    </script>

  </body>
</html>